{
  "manifest_version": 3,
  "name": "Hoyolab Auto Sign",
  "version": "1.0",
  "description": "Automatic collection of daily Hoyolab rewards",
  "permissions": [
    "cookies",
    "storage",
    "alarms"
  ],
  "host_permissions": [
    "https://*.hoyolab.com/*",
    "https://sg-hk4e-api.hoyolab.com/*",
    "https://sg-public-api.hoyolab.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
    
  }
}