{
  "manifest_version": 3,
  "name": "Hoyolab Auto Sign",
  "version": "1.0",
  "description": "Automatic collection of daily Hoyolab rewards",
  "permissions": [
    "cookies",
    "storage",
    "alarms"
  ],
  "host_permissions": [
    "https://*.hoyolab.com/*",
    "https://sg-hk4e-api.hoyolab.com/*",
    "https://sg-public-api.hoyolab.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}